<%- include ('partials/header.ejs'); -%>
    <div class="container father">
        <% if (message != '') { %>
            <p class="text-center text-danger"><%= message %></p>
        <% } %>
        <form class="add-player-form " action="" method="post" enctype="multipart/form-data">
            <div class='son fontstyle1'>
                Thêm Sản Phẩm
            </div>
            <div class="form-group">
                <div class="form-group col-md-6 son">
                    <input type="text" class="form-control" name="Name" id="Name" placeholder="Tên mặt hàng" required>
                </div>
                <div class="form-group col-md-6 son">
                    <input type="text" class="form-control" name="Price" id="Price" placeholder="Giá Tiền" required>
                </div>
            
                <div class="form-group col-md-6 son">
                    <input type="number" class="form-control" name="SoLuong" id="SoLuong" placeholder="Số Lượng" required>
                </div>
                <div class="form-group col-md-6 son">
                    <select id="Status" name="Status" class="form-control" required>
                        <option selected disabled>Chọn Tình Trạng</option>
                        <option>Còn Hàng</option>
                        <option>Hết Hàng</option>
                        <option>Đang Về..</option>
  
                    </select>
                </div>
                <div class="col-md-6 son">
                    <label class='fontstyle' for="player-img"><b>Hình Ảnh Mặt Hàng</b></label>
                    <input type="file" name="image" id="player-img" class="" required>
                </div>
            </div>
            <button type="submit" class="btn  son editbuttoneff">Thêm Hàng</button>
        </form>
    </div>
</div>
</body>
</html>
