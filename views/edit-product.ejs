<%- include ('partials/header.ejs'); -%>
<div class="container father">
    <% if (message) { %>
        <p class="text-center text-danger"><%= message %></p>
    <% } %>

    <% if (product) { %>
        
        <form class="add-product-form" action="" method="post" enctype="multipart/form-data">
            <div class='son fontstyle1'>
                Chỉnh Sửa Thông Tin Sản Phẩm
            </div>
            <div class="form-group">
                <div class="form-group col-md-6 son">
                    <input type="text" class="form-control" name="Name" id="Name" placeholder="Tên Mặt Hàng" value="<%= product.Name %>" required>
                </div>
                <div class="form-group col-md-6 son">
                    
                    <input type="text" class="form-control" name="Price" id="Price" placeholder="Giá" value="<%= product.Price %>" required>
                </div>
            </div>
            <div class="form-group">
                <div class="form-group col-md-6 son">
                    <input type="number" class="form-control" name="SoLuong" id="SoLuong" placeholder="Số Lượng" value="<%= product.SoLuong%>" required>
                </div>
                <div class="form-group col-md-6 son">
                    <select id="Status" name="Status" class="form-control" required>
                        <option selected disabled>Chọn Tình Trạng</option>
                        <option>Còn Hàng</option>
                        <option>Hết Hàng</option>
                        <option>Đang Về..</option>  
                    </select>
                </div>
            </div>
            <button type="submit" class="btn col-md-6 son editbuttoneff">Cập Nhập</button>
        </form>
    <% } else { %>
        <p class="text-center">Chưa có mặt hàng được thêm vào. <a href="/add">Thêm mặt hàng</a>.</p>
    <% } %>
</div>
</div>
</body>
</html>